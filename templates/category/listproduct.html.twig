{% extends 'base.html.twig' %}

{% block title %} Product {% endblock %}

{% block body %}
    <div class="container">
        <div class="row">

            <h2 class="col-md-12 my-3 text-center">List of products in <strong>{{ category.name }}</strong> category</h2>

            {# {% for product in products %} #}
            {% for product in category.products %}
                <div class="col-3 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="card-title">
                                <h3>{{ product.name }}</h3>
                            </div>
                            <p class="card-text">{{ product.description }}</p>
                            <a href="{{ path('product_details', {slug:product.slug}) }}" class="btn btn-primary">details</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
